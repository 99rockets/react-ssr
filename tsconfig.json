{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src"]
}
